{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "declaration": true,
        "downlevelIteration": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@nger/decorator": [
                "packages/decorator/lib/index.ts"
            ],
            "@nger/cli": [
                "packages/cli/lib/index.ts"
            ],
            "@nger/plain-proto": [
                "packages/plain-proto/lib/index.ts"
            ]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "lib"
    ]
}